<script>
  const form = document.querySelector('form');

  form.addEventListener('submit', async (e) =>{
    e.preventDefault();

    const id = form.id.value;

    try {
    const res = await fetch('/msf/teacher_display',{
        method: "POST",
        body: JSON.stringify({ id }),
        headers: { 'Content-Type': 'application/json'}
    });  
    const data = await res.json();
    console.log(data);
    if(data.teachers.length >0)
    {      
    document.getElementById("name").value = data.teachers[0].name;   
    document.getElementById("ID").value = data.teachers[0].branch;
    document.getElementById("Location").value = data.teachers[0].location;  
    document.getElementById("error").innerHTML =  " "; 
    }
    if(data.students.length >0)
    {      
    document.getElementById("name").value = data.students[0].name;   
    document.getElementById("ID").value = data.students[0].branch;
    document.getElementById("Location").value = data.students[0].location;   
    document.getElementById("error").innerHTML =  "";
    }
    if(data.managers.length >0)
    {      
    document.getElementById("name").value = data.managers[0].name;   
    document.getElementById("ID").value = data.managers[0].branch;
    document.getElementById("Location").value = data.managers[0].location; 
    document.getElementById("error").innerHTML =  "";  
    }   
    if(data.managers.length == 0 && data.students.length == 0 && data.teachers.length == 0)    
    {
      document.getElementById("name").value = "";   
      document.getElementById("ID").value = "";
      document.getElementById("Location").value = "";
      document.getElementById("error").innerHTML =  "Enter proper ID Number";
    }                                                                                     
    
    
}
catch(err){
    console.log(err);

}

  })
</script>
